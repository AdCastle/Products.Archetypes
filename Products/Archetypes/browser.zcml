<configure
    xmlns:browser="http://namespaces.zope.org/browser">

    <!-- Using Zope3 Browser View -->

    <browser:page
        for=".interfaces.ITTWLockable"
        name="notifyEditBegins"
        class=".browser.locking.LockingView"
        attribute="notifyEditBegins"
        permission="cmf.ModifyPortalContent"
        />

    <browser:page
        for=".interfaces.ITTWLockable"
        name="isLocked"
        class=".browser.locking.LockingView"
        attribute="isLocked"
        permission="zope2.View"
        />

    <browser:page
        for=".interfaces.ITTWLockable"
        name="getLockInformations"
        class=".browser.locking.LockingView"
        attribute="getLockInformations"
        permission="zope2.View"
        />

    <browser:page
        for=".interfaces.ITTWLockable"
        name="forceUnlock"
        class=".browser.locking.LockingView"
        attribute="forceUnlock"
        permission="cmf.ModifyPortalContent"
        />

</configure>
