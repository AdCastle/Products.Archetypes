<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

  <head><title></title></head>
  <body>

    <!-- Boolean Widgets -->

    <metal:view_macro define-macro="view"
                      tal:define="voc field/Vocabulary; key accessor;
                                  value python:voc and voc.getValue(str(key)) or key;
                                  msgid python:voc and voc.getMsgId(str(key)) or ''">
        <span i18n:translate=""
              tal:attributes="i18n:translate msgid"
              tal:content="structure value" >Yes No</span>
    </metal:view_macro>

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
	<metal:fill metal:fill-slot="widget_body_label_prefix"
           tal:define="value python:test(not not value and value not in ('0', 'False'), 1, 0)">
	  
	  <input class="noborder"
		 type="checkbox"
		 value="on"
		 tabindex=""
		 tal:attributes="tabindex tabindex/next;
		 name string:${fieldName}:boolean;
		 id fieldName;
		 checked python:value;"
		 />

	</metal:fill>
      </metal:use>
    </metal:define>

    <metal:hidden_macro define-macro="hidden">
      <input type="hidden"
             tal:define="value python:test(not not value and value not in ('0', 'False'), 1, 0)"
             name=""
             value=""
             tabindex="#"
             tal:attributes="name fieldName;
                             value python:value or '';
                             tabindex tabindex/next;" />
    </metal:hidden_macro>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/boolean/macros/edit">
      </div>
    </div>

  </body>

</html>

