<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- Calendar Widgets -->

    <div metal:define-macro="view">
      <div metal:use-macro="here/widgets/field/macros/view">
	<div metal:fill-slot="widget_view">
	  <span tal:define="d accessor"
	        tal:replace="structure python:d and here.toPortalTime(d, long_format=1) or 'not set'"/>
	</div>
      </div>
    </div>


    <div metal:define-macro="edit">
      <div metal:use-macro="here/widgets/field/macros/edit">
	<div metal:fill-slot="widget_body">
	    <div tal:define="id fieldName;
	      inputname  fieldName;
	      formname   string:edit_form;
	      inputvalue python: test(value, value, '');
	      tabindex tabindex/next; 
              onfocus string:formtooltip('${fieldName}_help',1);
              onblur string:formtooltip('${fieldName}_help',0);"
	      tal:omit-tag="">
	      <div metal:use-macro="here/calendar_support/macros/calendarDatePickerBox">
		a calendar, hopefully
	      </div>
	    </div>
	</div>
      </div>
    </div>
    
    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/field/macros/edit">
	<div metal:fill-slot="widget_body">
	    <div tal:define="id fieldName;
	      inputname  fieldName;
	      formname   string:search_form;
	      inputvalue python: '';
	      tabindex tabindex/next; 
              onfocus string:formtooltip('${fieldName}_help',1);
              onblur string:formtooltip('${fieldName}_help',0);"
	      tal:omit-tag="">
	      <div metal:use-macro="here/calendar_support/macros/calendarDatePickerBox">
		a calendar, hopefully
	      </div>
	    -
	    <div tal:define="id fieldName;
	      inputname  string:$fieldName:list;
	      formname   string:search_form;
	      inputvalue python: '';
	      tabindex tabindex/next; 
              onfocus string:formtooltip('${fieldName}_help',1);
              onblur string:formtooltip('${fieldName}_help',0);"
	      tal:omit-tag="">
	      <div metal:use-macro="here/calendar_support/macros/calendarDatePickerBox">
		a calendar, hopefully
	      </div>
	    </div>
	</div>
      </div>
    </div>

  </body>
  
</html>

