<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  i18n:domain="plone">
  
  <body>
    
    <!-- Epoz Widgets -->
    <div metal:define-macro="view">
      <div metal:use-macro="here/widgets/field/macros/view">
	<div metal:fill-slot="widget_view">
	  <span tal:replace="structure accessor"/>
	</div>
      </div>
    </div>

    <metal:define define-macro="edit">
      <metal:use use-macro="here/widgets/field/macros/edit">
	<metal:fill  metal:fill-slot="widget_body" tal:define="inputname fieldName;inputvalue value">
	  <div metal:use-macro="here/wysiwyg_support/macros/wysiwygEditorBox"/>
	</metal:fill>
      </metal:use>
    </metal:define>
    
    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/string/macros/edit">
      </div>
    </div>
    
  </body>
  
</html>

