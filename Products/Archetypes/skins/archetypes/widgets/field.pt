<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

    <!-- Base Field Widgets -->
    <div metal:define-macro="view">
      <div tal:condition="python:'view' in widget.modes">
	<span class="label" tal:content="string:${widget/Label}:">Field</span>
        <span tal:condition="field/workflowable|nothing"
              tal:omit-tag="">
        (<a href="#"
        tal:define="wf_tool here/portal_workflow;
                    obj python:accessor();
                    review_state python:wf_tool.getInfoFor(obj, 'review_state', '')"
        tal:attributes="href string:${obj/absolute_url}/portal_form/content_status_history;
                        class python:test(review_state, review_state, 'private')"
        tal:content="review_state">
        review_state
        </a>)
        </span>
	<div metal:define-slot="widget_view"/>
	  <br/>
      </div>
    </div>
    
    <metal:define define-macro="edit">
    <div class="row" tal:condition="python: 'edit' in widget.modes">
        <div tal:attributes="class python:test(field.required, 'required label', 'label')">
             <span i18n:translate="" tal:content="string:${widget/Label}"></span>
             <div id="title_help" class="help" style="visibility: hidden;"
                  tal:content="string:${widget/Description}"
                  tal:attributes="id string:${fieldName}_help">Help tooltip</div>
        
             <span tal:condition="field/workflowable|nothing"
                   tal:omit-tag="">
             (<a href="#"
                 tal:define="wf_tool here/portal_workflow;
                             obj python:accessor();
                             review_state python:wf_tool.getInfoFor(obj, 'review_state', '')"
                 tal:attributes="href string:${obj/absolute_url}/portal_form/content_status_history;
                                 class python:test(review_state, review_state, 'private')"
                 tal:content="review_state">review_state</a>)
             </span>
        </div> 
	<div class="field"
	     tal:define="error python:errors.get(fieldName);
	                 value python:request.get(fieldName, accessor())"
	     tal:attributes="class python:test(error, 'field error', 'field')" >
	     <span tal:condition="error" tal:replace="error" />
             <div metal:define-slot="widget_body"></div>
        </div>
    </div>
    </metal:define>    


   </body>
</html>

