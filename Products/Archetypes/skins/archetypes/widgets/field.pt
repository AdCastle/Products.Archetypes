<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

    <!-- Base Field Widgets -->
    <metal:block define-macro="view">
      <tal:block condition="python:'view' in widget.modes and 'r' in field.mode and field.checkPermission('r',here)" tal:omit-tag="">
        <tal:block condition="use_label|nothing">
        <label tal:content="python:widget.Label(here) + ':'">Field</label>
        <span tal:condition="field/workflowable|nothing"
              tal:omit-tag="">
        (<a href="#"
        tal:define="wf_tool here/portal_workflow;
                    lang master_language | nothing;
                    obj python:lang and accessor(lang=lang) or accessor();
                    review_state python:wf_tool.getInfoFor(obj, 'review_state', '')"
        tal:attributes="href string:${obj/absolute_url}/portal_form/content_status_history;
                        class python:test(review_state, review_state, 'private')"
        tal:content="review_state">
        review_state
        </a>)
        </span>
        <br />
	</tal:block>
	<metal:block define-slot="widget_view" />
      </tal:block>
    </metal:block>

    <metal:define define-macro="edit">
    <div class="field" tal:condition="python: 'edit' in widget.modes and 'w' in field.mode and field.checkPermission('w',here)">
        <label tal:attributes="class python:test(field.required, 'required', '')">
             <span i18n:translate="" tal:content="python:widget.Label(here)"></span>
             <span tal:condition="field/workflowable|nothing"
                   tal:omit-tag="">
             (<a href="#"
                 tal:define="wf_tool here/portal_workflow;
                             obj python:accessor();
                             review_state python:wf_tool.getInfoFor(obj, 'review_state', '')"
                 tal:attributes="href string:${obj/absolute_url}/portal_form/content_status_history;
                                 class python:test(review_state, review_state, 'private')"
                 tal:content="review_state">review_state</a>)
             </span>

             <span tal:condition="python:hasattr(field, 'getContentType') and field.getContentType(here)"
                   tal:omit-tag="">
             (<span tal:replace="python:field.getContentType(here)" />)
             </span>
        </label>

        <div id="title_help" class="formHelp" 
          tal:content="structure python:widget.Description(here)"
          tal:attributes="id string:${fieldName}_help">Help tooltip</div>

        <div class="field"
	           tal:define="error python:errors.get(fieldName);
                               value python:widget.populate and field.getEditAccessor(here)() or '';
	                       value python:widget.postback and request.get(fieldName, value) or value;"
	           tal:attributes="class python:test(error, 'field error', 'field')" >
             <div tal:condition="error">
                 <tal:block i18n:translate="" content="error">Error</tal:block>
                 <br />
             </div>
             <div metal:define-slot="widget_body"></div>
        </div>
    </div>
    </metal:define>

   </body>
</html>
