<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Keyword Widgets -->

    <metal:view_macro define-macro="view">
      <div tal:attributes="id string:archetypes-inplace-${field/getName};"
	   tal:repeat="item accessor">
	<span  tal:content="item"/><br />
      </div>
      <tal:ajax condition="python: field.writeable(here)" 
		define="ajax python:modules['Products.Bling.ajax'];
			id string:archetypes-inplace-${field/getName};"
		replace="structure python: ajax.BlingEditor(
			 here.absolute_url(), id, dict(js=dict(
			 autopopulate = False, 
			 autosize = False,
			 form = dict(field_name = field.getName(),
			 mode = 'ajax_edit',
			 ))))"
  		/>
    </metal:view_macro>

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
	<tal:define metal:fill-slot="widget_body" define="contentKeywords accessor;
		    allowedKeywords python: here.collectKeywords(fieldName, field.accessor, widget.vocab_source);
		    site_props here/portal_properties/site_properties;
		    allowRolesToAddKeywords site_props/allowRolesToAddKeywords;">

	  <tal:condition condition="python:not widget.roleBasedAdd or [role for role in user.getRolesInContext(here) if role in allowRolesToAddKeywords]">
	    <div style="width: 45%; float: right;">
	      <span i18n:translate="label_new_keywords">New keywords</span>
	      <br />
	      <textarea id="entered_subjects"
			name="subject:lines"
			rows="11"
			cols="15"
			wrap="off"
			tabindex=""
			tal:attributes="id string:${fieldName}_keywords;
			name string:${fieldName}_keywords:lines;
			tabindex tabindex/next;"
			tal:define="subject python:[item for item in value if item not in allowedKeywords]"
			tal:content="python:'\n'.join(subject)">
		selected keywords
	      </textarea>

	    </div>
	  </tal:condition>

	  <div style="width: 45%">
	    <span i18n:translate="label_existing_keywords">Existing keywords</span>
	    <br />
	    <select id="predefined_subjects"
		    name="predefined_subjects:list"
		    size="14"
		    multiple="multiple"
		    tabindex=""
		    tal:attributes="id string:${fieldName}_existing_keywords;
		    name string:${fieldName}_existing_keywords:list;
		    tabindex tabindex/next;">
	      <option value="#" tal:repeat="keyword allowedKeywords"
		      tal:content="keyword" tal:attributes="value keyword;
		      selected python:test(here.unicodeTestIn(keyword, value), 'selected', None)">
		an existing keyword
	      </option>
	    </select>

	  </div>

	</tal:define>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/keyword/macros/edit">
      </div>
    </div>
    
    <div metal:define-macro="ajax_edit" 
	 tal:define="fieldName field/getName;
		     allowedKeywords python: here.collectKeywords(fieldName, field.accessor, widget.vocab_source);
		     ">
	  <select name="value" multiple="multiple"
		  tal:define="vocab allowedKeywords;
			      value accessor;
			      "
		  tal:attributes=" id fieldName;
				  size widget/size;
				  tabindex tabindex/next;">
	    <option selected=""
		    tal:repeat="item vocab"
		    tal:attributes="value nocall:item;
				    selected python:test(here.unicodeTestIn(item, value), 'selected', None);"
		    tal:content="python:here.translate(vocab.getMsgId(item), default=vocab.getValue(item))"
		    i18n:translate="" />
	  </select>

    </div>

  </body>

</html>

