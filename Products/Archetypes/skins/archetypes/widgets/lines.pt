<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- Lines Widgets -->

    <div metal:define-macro="view">
      <div metal:use-macro="here/widgets/field/macros/view">
	<div metal:fill-slot="widget_view">
	  <div tal:repeat="item accessor">
	    <span tal:content="item"/><br/>
	  </div>
	</div>
      </div>
    </div>

    <div metal:define-macro="edit">
      <div metal:use-macro="here/widgets/field/macros/edit">
	<div metal:fill-slot="widget_body">
	  <textarea  
		    tabindex="#"
		    tal:attributes="name string:$fieldName:lines;
	    value value;
	    cols widget/cols;
	    rows widget/rows;
	    tabindex tabindex/next;
            onfocus string:formtooltip('${fieldName}_help',1);
            onblur string:formtooltip('${fieldName}_help',0);
	    "><span tal:repeat="item value" tal:replace="python: '%s\n' % item"></span></textarea>
	</div>
      </div>
    </div>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/lines/macros/edit">
      </div>
    </div>

  </body>
  
</html>

