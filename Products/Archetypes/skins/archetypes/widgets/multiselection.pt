<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Selection Widgets -->

    <metal:view_macro define-macro="view"
          tal:define="vocab python:field.Vocabulary(here);
          value python:accessor();
          display python:here.displayValue(vocab, value);"
          tal:replace="structure display" />

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
        <metal:fill fill-slot="widget_body"
                    tal:define="vocab python:field.Vocabulary(here);
                                format python:test(field.widget.format,field.widget.format,'select');
                                vlen  python: len(vocab);
                                indexes python:vocab.getIndexesFromKeys(value);">
      
          <input type="hidden"
                 value=""
                 tal:condition="not:field/required|nothing"
                 tal:attributes="name string:$fieldName:default:list;" />
          
          <tal:block tal:condition="python:format=='checkbox'">
            <tal:block tal:repeat="item vocab">
              <input tal:define="index python:vocab.getIndex(item);
                                 tabindex tabindex/next;"
                     tal:attributes="type string:checkbox;
                                     name string:$fieldName:list;
                                     id string:${fieldName}_${tabindex};
                                     tabindex tabindex;
                                     checked python:test(index in indexes, 'checked', None);
                                     value index;" />
              <label for="field"
                     tal:attributes="for string:${fieldName}_${tabindex}"
                     tal:content="python:vocab.getValue(item)" />
              <br />
            </tal:block>
          </tal:block>
      
          <tal:block tal:condition="python:format=='select'">
            <select multiple="multiple"
                    tal:condition="python:format=='select'"
                    tal:attributes="name string:${fieldName}:list;
                                    id fieldName;
                                    size widget/size;
                                    tabindex tabindex/next;">
                                    
              <tal:block tal:repeat="item vocab">
                <option selected=""
                        tal:define="index python:vocab.getIndex(item);"
                        tal:attributes="value index;
                                        selected python:test(index in indexes, 'selected', None);"
                        tal:content="python:vocab.getValue(item)"
                        i18n:translate="" />
              </tal:block>
            </select>
          </tal:block>
        </metal:fill>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/multiselection/macros/edit">
      </div>
    </div>

  </body>
</html>

