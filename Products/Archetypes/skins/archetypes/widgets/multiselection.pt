<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Selection Widgets -->

    <metal:view_macro define-macro="view">
      <span tal:define="vocab python:field.Vocabulary(here);
                       value python:accessor();
                       display python:here.displayValue(vocab, value)"
	    tal:attributes="id string:archetypes-inplace-${field/getName};"
            tal:content="structure display"/>
      <tal:ajax condition="python: field.writeable(here)" 
		define="ajax python:modules['Products.Bling.ajax'];
			id string:archetypes-inplace-${field/getName};"
		replace="structure python: ajax.BlingEditor(
			 here.absolute_url(), id, dict(js=dict(
			 autopopulate = False, 
			 autosize = False,
			 form = dict(field_name = field.getName(),
			 mode = 'ajax_edit',
			 ))))"
  		/>
    </metal:view_macro>

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
	<metal:fill fill-slot="widget_body"
		    tal:define="vocab python:field.Vocabulary(here);
		    format python:test(widget.format, widget.format, 'select');
		    vlen  python: len(vocab)">

	  <input type="hidden"
		 value=""
		 tal:condition="not:field/required|nothing"
		 tal:attributes="name string:$fieldName:default:list;" />
	  <span tal:repeat="item vocab" tal:omit-tag=""
		tal:condition="python:format=='checkbox'">
	    <tal:block tal:define="tabindex tabindex/next">
	      <input
	       tal:attributes="type string:checkbox;
	       name string:$fieldName:list;
	       id string:${fieldName}_${tabindex};
	       tabindex tabindex;
	       checked python:test(here.unicodeTestIn(item, value), 'checked', None);
	       value nocall:item;"
	       />
          <label tal:content="python:here.translate(vocab.getMsgId(item), default=vocab.getValue(item))"
                 i18n:translate=""
                 tal:attributes="for string:${fieldName}_${tabindex}" />
	      <br />
	    </tal:block>
	  </span>

	  <select multiple="multiple"
		  tal:condition="python:format=='select'"
		  tal:attributes="name string:${fieldName}:list;
		  id fieldName;
		  size widget/size;
		  tabindex tabindex/next;">
	    <option selected=""
		    tal:repeat="item vocab"
		    tal:attributes="value nocall:item;
		    selected python:test(here.unicodeTestIn(item, value), 'selected', None);"
		    tal:content="python:here.translate(vocab.getMsgId(item), default=vocab.getValue(item))"
		    i18n:translate="" />
	  </select>
	</metal:fill>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/multiselection/macros/edit">
      </div>
    </div>

    <metal:hidden_macro define-macro="hidden">
      <input type="hidden"
             tal:define="value python:accessor()"
             name=""
             value=""
             tabindex="#"
             tal:attributes="name fieldName;
                             value python:'\n'.join(value);
                             tabindex tabindex/next;" />
    </metal:hidden_macro>

    <div metal:define-macro="ajax_edit">
	  <select name="value" multiple="multiple"
		  tal:define="vocab python:field.Vocabulary(here);
			      value accessor;
			      "
		  tal:attributes=" id fieldName;
				  size widget/size;
				  tabindex tabindex/next;">
	    <option selected=""
		    tal:repeat="item vocab"
		    tal:attributes="value nocall:item;
				    selected python:test(here.unicodeTestIn(item, value), 'selected', None);"
		    tal:content="python:here.translate(vocab.getMsgId(item), default=vocab.getValue(item))"
		    i18n:translate="" />
	  </select>
    </div>

  </body>
</html>

