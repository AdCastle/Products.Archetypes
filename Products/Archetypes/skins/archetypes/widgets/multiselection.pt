<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- Selection Widgets -->

    <div class="field" metal:define-macro="view">
     <metal:block define-slot="widget_label">
     </metal:block>
     <metal:block use-macro="here/widgets/field/macros/view">
	<metal:block fill-slot="widget_view"
   	     tal:define="vocab python:field.Vocabulary(here);
                         value python:accessor();
	                 display python:here.displayValue(vocab, value);">
          <span tal:replace="structure display"/>
	</metal:block>
     </metal:block>
    </div>

    <metal:define define-macro="edit">
    <metal:use use-macro="here/widgets/field/macros/edit">
    <metal:fill fill-slot="widget_body"
       tal:define="vocab python:field.Vocabulary(here);
                   format python:test(field.widget.format,field.widget.format,'select');
                   vlen  python: len(vocab)">

        <input type="hidden"
               value=""
               tal:condition="not:field/required|nothing"
               tal:attributes="name string:$fieldName:default:list;" />
        <span tal:repeat="item vocab" tal:omit-tag=""
              tal:condition="python:format=='checkbox'">
        <tal:block tal:define="tabindex tabindex/next">
        <input
           tal:attributes="type string:checkbox;
                           name string:$fieldName:list;
                           id string:${fieldName}_${tabindex};
                           tabindex tabindex;
                           checked python:test(here.unicodeTestIn(item, value), 'checked', None);
                           value item;" 
          />
 	<label for="field"
               tal:attributes="for string:${fieldName}_${tabindex}" 
               tal:content="python:vocab.getValue(item)" />
	<br />
        </tal:block>
	</span>

        <select multiple="multiple"
	  tal:condition="python:format=='select'"
	  tal:attributes="name string:${fieldName}:list;
	                  id fieldName;
	                  size widget/size;
	                  tabindex tabindex/next;
	                  onfocus string:formtooltip('${fieldName}_help',1);
	                  onblur string:formtooltip('${fieldName}_help',0);">
	  <option selected=""
	    tal:repeat="item vocab"
	    tal:attributes="value item;
	    selected python:test(here.unicodeTestIn(item, value), 'selected', None);"
	    tal:content="python: vocab.getValue(item)"/>
	</select>
      </metal:fill>
     </metal:use>
  </metal:define>

  <div metal:define-macro="search">
    <div metal:use-macro="here/widgets/multiselection/macros/edit">
    </div>
  </div>

</body>
</html>

