<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- Rich Widgets -->

    <div metal:define-macro="view">
      <div metal:use-macro="here/widgets/field/macros/view">
	<div metal:fill-slot="widget_view">
	  <span tal:replace="structure accessor"/>
	</div>
      </div>
    </div>

    <div metal:define-macro="edit">
      <div metal:use-macro="here/widgets/field/macros/edit">
	<div metal:fill-slot="widget_body" 
	  tal:define="binary python: here.isBinary(fieldName);">
	  <div class="group">
	    <span tal:condition="error" tal:replace="error" />
	      <div class="label">Enter new text</div>
	      <metal:block
		metal:use-macro="here/widgets/textarea/macros/area_edit"/>
		
		<br/>
		  <metal:block
		    metal:use-macro="here/widgets/textarea/macros/area_format"/>
		<div class="label">or Upload a File</div>
		<metal:block
		  metal:use-macro="here/widgets/file/macros/file_edit"/>
		  <br/>
	  </div>
	</div>
      </div>
    </div>

  </body>
  
</html>

