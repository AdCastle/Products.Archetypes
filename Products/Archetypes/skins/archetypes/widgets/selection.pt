<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- Selection Widgets -->

    <metal:define define-macro="view">
    <metal:use use-macro="here/widgets/field/macros/view">
    <metal:fill fill-slot="widget_view"
	   tal:define="vocab python:field.Vocabulary(here);
	               display python: vocab.getValue(unicode(str(accessor())))">
        <span tal:replace="structure display"/>
	</metal:fill>
    </metal:use>
    </metal:define>

    <metal:define define-macro="edit">
    <metal:use use-macro="here/widgets/field/macros/edit">
    <metal:fill fill-slot="widget_body"
        tal:define="vocab python:field.Vocabulary(here);
	        vlen python:len(vocab);
		format python:field.widget.format;
            ">
	    <tal:shortVocab condition="python: (vlen < 4 and format=='flex') or (format == 'radio')">
	    <!-- Radio when the vocab is short < 4 -->
            <tal:radios repeat="item vocab">
	            <input class="noborder"
		            tabindex=""
		            type="radio"
		            tal:attributes="name fieldName;
		                checked python: value is not None and unicode(str(value)) == unicode(str(item));
		                value python:unicode(str(item));
                        tabindex tabindex/next;
                        onfocus string:formtooltip('${fieldName}_help',1);
                        onblur string:formtooltip('${fieldName}_help',0);"
                        />&nbsp;<span i18n:translate="" tal:content="python: vocab.getValue(item)"/>
                <br />
		    </tal:radios>
        </tal:shortVocab>
        <tal:longVocab condition="python: (vlen >= 4 and format=='flex') or (format in ('select','pulldown'))">
        <!-- Pulldown when longer -->
	        <select tal:attributes="name fieldName; id fieldName;
                    tabindex tabindex/next;
                    onfocus string:formtooltip('${fieldName}_help',1);
                    onblur string:formtooltip('${fieldName}_help',0);
                    ">
	            <option tal:repeat="item vocab"
                    	tal:attributes="value item;
                        selected python:test(value is not None and unicode(str(value)) == unicode(str(item)), 'selected', None);"
		        tal:content="python: vocab.getValue(item)"
                        i18n:translate=""
		        />
	        </select>
	    </tal:longVocab>
	</metal:fill>
    </metal:use>
    </metal:define>
    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/selection/macros/edit">
      </div>
    </div>

  </body>
</html>

