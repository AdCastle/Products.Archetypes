<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">

  <head tal:replace="nothing"><title></title></head>

  <body tal:omit-tag="">

    <h1 tal:replace="structure here/manage_page_header | nothing">
      Header
    </h1>

    <link rel="stylesheet" href="archetypes_zmi.css" />

    <h2 tal:define="form_title string:Add ${options/portal_type}"
        tal:replace="structure here/manage_form_title">
      Form Title
    </h2>

    <form action="manage_addSomething"
          method="post"
          tal:attributes="action options/constructor">

      <div tal:define="purl nocall:here/portal_url;
                       portal purl/getPortalObject;
                       errors options/state/getErrors | python:{};
                       Iterator python:modules['Products.Archetypes'].IndexIterator;
                       tabindex python:Iterator();
                       widgets python:here.archetype_tool.getWidgets(mode='edit',
                                      schemata='default', context=container,
                                      package=options['package'], type=options['type'])">

        <tal:fields repeat="widget widgets">
          <metal:fieldMacro use-macro="widget" />
        </tal:fields>

      </div>

      <div class="form-element">
        <input class="form-element"
               type="submit"
               name="submit"
               value="Add"
               i18n:attributes="value"
               i18n:domain="archetypes"
               />
      </div>

    </form>

  </body>

</html>
